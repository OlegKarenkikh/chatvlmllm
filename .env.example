# Конфигурация окружения для ChatVLMLLM

# =============================================================================
# Настройки моделей
# =============================================================================
DEFAULT_MODEL=qwen3_vl_2b
MODEL_CACHE_DIR=~/.cache/huggingface
MAX_IMAGE_SIZE=10485760  # 10MB в байтах

# =============================================================================
# Настройки устройства
# =============================================================================
CUDA_VISIBLE_DEVICES=0
USE_GPU=true
DEVICE=cuda  # cuda, cpu, или mps

# =============================================================================
# Настройки обработки
# =============================================================================
MAX_BATCH_SIZE=10
INFERENCE_TIMEOUT=30  # секунды
ENABLE_PREPROCESSING=true

# =============================================================================
# Настройки API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Настройки безопасности
# =============================================================================
# CORS: разделённый запятыми список разрешённых origins
CORS_ORIGINS=http://localhost:8501,http://localhost:3000,http://127.0.0.1:8501

# Rate limiting: запросов в минуту на IP
RATE_LIMIT=60

# =============================================================================
# Настройки Streamlit
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# =============================================================================
# Логирование
# =============================================================================
LOG_LEVEL=INFO
LOGS_DIR=./logs

# =============================================================================
# Производительность
# =============================================================================
ENABLE_FLASH_ATTENTION=true
USE_INT8_QUANTIZATION=false
USE_INT4_QUANTIZATION=false
OPTIMIZE_MEMORY=true

# =============================================================================
# Пути
# =============================================================================
RESULTS_DIR=./results
EXAMPLES_DIR=./examples
